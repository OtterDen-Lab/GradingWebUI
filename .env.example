# Canvas API (required)
CANVAS_API_KEY=your_canvas_api_key_here
CANVAS_API_URL=https://your-institution.instructure.com

# Optional production Canvas target
# USE_PROD_CANVAS=true
# CANVAS_API_KEY_PROD=your_prod_key
# CANVAS_API_URL_PROD=https://your-institution.instructure.com

# Initial instructor bootstrap (recommended for first startup)
# User is only created when GRADING_BOOTSTRAP_ADMIN_PASSWORD is set.
GRADING_BOOTSTRAP_ADMIN_USERNAME=admin
GRADING_BOOTSTRAP_ADMIN_PASSWORD=change_this_password
GRADING_BOOTSTRAP_ADMIN_EMAIL=admin@example.com
GRADING_BOOTSTRAP_ADMIN_FULL_NAME=Administrator

# Auth cookie policy
AUTH_COOKIE_SECURE=true
AUTH_COOKIE_SAMESITE=lax

# SQLite behavior (optional tuning)
GRADING_DB_CONNECT_TIMEOUT_SECONDS=30
GRADING_DB_BUSY_TIMEOUT_MS=30000
GRADING_DB_CREATE_MIGRATION_BACKUP=true
# GRADING_DB_MIGRATION_BACKUP_DIR=/path/to/db-backups

# Startup validation (recommended to keep true in production)
GRADING_STRICT_STARTUP_CONFIG=true

# Anthropic model selection (optional)
# If unset, defaults to claude-3-5-sonnet-latest with fallback to claude-3-5-haiku-latest.
# ANTHROPIC_MODEL=claude-3-5-sonnet-latest
# ANTHROPIC_FALLBACK_MODELS=claude-3-5-haiku-latest
